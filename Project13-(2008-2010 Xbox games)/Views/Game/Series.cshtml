@model List<Project13__2008_2010_Xbox_games_.Models.Game>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "2004-2010 Xbox Games";
}

@if (Model.Count() > 0)
{
    foreach (var game in Model)
    {
        <div>

            <h4>@Html.ActionLink(game.Title, "Detail", new { id = game.Id })</h4>

            <a href="@Url.Action("Detail", new { id = game.Id })">
                <img src="~/Images/@game.CoverImagerFileName" />
            </a>

        </div>
    }
}